{
  "name": "EventDepth_UNet",
  "n_gpu": 0,
  "dsec_dir": "/content/drive/MyDrive/CVbyDL/",
  "arch": {
      "type": "UNet",
      "args": {
          "n_channels": 15
      }
  },
  "data_loader": {
      "args":{
          "batch_size": 2,
          "shuffle": true,
          "validation_split": 0.1,
          "num_workers": 2
      }
  },
  "optimizer": {
      "type": "Adam",
      "args":{
          "lr": 0.001,
          "weight_decay": 0,
          "amsgrad": true
      }
  },
  "loss": "loss",
  "metrics": [
      "mean_square_error", "mean_absolute_error"
  ],
  "lr_scheduler": {
      "type": "StepLR",
      "args": {
          "step_size": 50,
          "gamma": 0.1
      }
  },
  "trainer": {
      "epochs": 100,

      "save_dir": "saved/",
      "save_period": 1,
      "verbosity": 2,
      
      "monitor": "min val_loss",
      "early_stop": 10,

      "tensorboard": true
  }
}
